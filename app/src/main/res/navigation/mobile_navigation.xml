<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.leeseungyun1020.learningtripmvp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_story"
        android:name="com.leeseungyun1020.learningtripmvp.ui.story.StoryFragment"
        android:label="@string/title_story"
        tools:layout="@layout/fragment_story" />

    <fragment
        android:id="@+id/navigation_sticker"
        android:name="com.leeseungyun1020.learningtripmvp.ui.sticker.MapsFragment"
        android:label="@string/title_sticker"
        tools:layout="@layout/fragment_maps" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.leeseungyun1020.learningtripmvp.ui.settings.SettingsFragment"
        android:label="@string/title_setting"
         />

    <action android:id="@+id/navigation_setting"
        app:destination="@id/navigation_settings"/>
</navigation>